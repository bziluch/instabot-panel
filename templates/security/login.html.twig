{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
{% endblock stylesheets %}

{% block title %}Zaloguj się!{% endblock %}

{% block body %}

    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header pt-3">
                    <h3>Zaloguj się</h3>
{#                    <div class="d-flex justify-content-end social_icon">#}
{#                        <span><i class="fab fa-facebook-square"></i></span>#}
{#                        <span><i class="fab fa-google-plus-square"></i></span>#}
{#                        <span><i class="fab fa-twitter-square"></i></span>#}
{#                    </div>#}
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="input-group form-group mb-2">
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                                   autocomplete="email" required autofocus placeholder="Adres e-mail">

                        </div>
                        <div class="input-group form-group mb-4">
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password"
                                   required placeholder="Hasło">
                        </div>
                        <div class="row align-items-center remember mb-2">
                            <input type="checkbox" name="_remember_me" id="_remember_me">Zapamiętaj mnie
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Zaloguj" class="btn float-right login_btn">
                        </div>
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                    </form>
                </div>
{#                <div class="card-footer">#}
{#                    <div class="d-flex justify-content-center">#}
{#                        <a href="#">Forgot your password?</a>#}
{#                    </div>#}
